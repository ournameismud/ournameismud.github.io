mixin svg-inline(name)
	.icon(class=`icon--${name}`)
		svg
			use.no-barba(xlink:href=`#${name}`)

mixin svg-link(name, href, className)
	a.icon(class=`icon--${name} ${className !== undefined && className}` href=`${href}`)
		svg
			use.no-barba(xlink:href=`#${name}`)

mixin svg-button(name, type, className)
	button.icon(class=`icon--${name} ${className !== undefined && className}` type=`${type}`)
		svg
			use.no-barba(xlink:href=`#${name}`)

mixin svg-label(name, htmlFor, className)
	label.icon(class=`icon--${name} ${className !== undefined && className}` for=`${htmlFor}`)
		svg
			use.no-barba(xlink:href=`#${name}`)

mixin svg(name)
	.icon(class=`icon--${name}`)
		svg
			use.no-barba(xlink:href=`/_assets/images/svg-symbols.svg#${name}`)


mixin social(icons, className)
	ul.nav(class=`${className}`)
		each val in icons
			li
				a(href="#" class=`${className}__item ${className}__item--${val}`)